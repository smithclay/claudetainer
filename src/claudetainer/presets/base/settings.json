{
  "model": "sonnet",
  "permissions": {
    "allow": ["Bash(cat:*)", "Bash(ls:*)", "Bash(echo:*)", "Bash(mkdir:*)"],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "toolNamePattern": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/subagent-start-logger.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/subagent-stop-logger.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/hello.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notifier.sh idle-notification"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  }
}
